<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="image_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/db_iv_bg</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="image_style2">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/db_iv_bg</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="btn_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/db_btn_bg</item>
        <item name="android:elevation">20dp</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
    </style>

    <style name="btn_ans_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/db_btn_bg_ans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="elevation">40dp</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/white</item>
    </style>
</resources>